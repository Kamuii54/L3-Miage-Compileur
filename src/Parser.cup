		Set cles = l.keySet();
		Iterator it = cles.iterator();
		
		for (Map.Entry<Variable, Noeud> entry : l.entrySet()) {
			Variable key = entry.getKey();
			defVar(t, key.getIdf(), n, false);
		}
	}
	
